<h1>Burger App</h1>
<h1>Burgers not eaten</h1>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
        <button class="eat" data-id="{{id}}" data-devoured="{{devoured}}">
            eat the burger
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>
<h1>Burgers eaten</h1>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>
<h1>Add a burgers</h1>
<form id="create-form">

    <div class="form-group">
        <label for="addBurger">Burger name:</label>
        <input type="text" id="addBurger" name="name">
    </div>
    <button type="submit">Add burger</button>
</form>